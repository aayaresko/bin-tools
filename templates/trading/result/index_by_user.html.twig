{% extends 'base.html.twig' %}

{% block title %}
    {{ 'trading.user.results.title'|trans({'{{user}}': user}) }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>
                {{ 'trading.user.results.title'|trans({'{{user}}': user}) }}
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% form_theme form 'form/bootstrap_4_layout.html.twig' %}
            {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
            {{ form_row(form.dateFrom) }}
            {{ form_row(form.dateTo) }}
            <div class="form-group">
                <button type="submit" class="btn-secondary btn">{{ 'filter'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row">
        {% if data is empty %}
            <div class="col-12">
                <p class="text-center">
                    {{ 'no_data'|trans }}
                </p>
            </div>
        {% endif %}
        {% for item in data %}
            {% if loop.index0 is divisible by(3) %}
                <div class="w-100"></div>
                <br/>
            {% endif %}
            <div class="col-4">
                <div class="card">
                    {% if item.image %}
                        <img src="{{ asset(item.image) | imagine_filter('result_image_thumbnail_widen') }}" class="card-img-top" />
                    {% endif %}
                    <div class="card-header">
                        <span class="float-left">
                            {{ item.date|date('d.m.Y') }}
                        </span>
                        <span class="float-right text-muted">
                            {{ 'created'|trans }} {{ item.createdAt|date('d.m.Y') }}
                        </span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            {{ 'trading.results.opening_quote'|trans }}: {{ item.openingQuote }}<br/>
                            {{ 'trading.results.closing_quote'|trans }}: {{ item.closingQuote }}<br/>
                            {{ 'trading.results.profit'|trans }}: {{ item.profit }}<br/>
                            {{ 'trading.results.spent'|trans }}: {{ item.spent }}<br/>
                            {{ 'trading.results.notes'|trans }}: {{ item.notes }}<br/>
                        </p>
                    </div>
                    <div class="card-footer text-muted">
                        <a href="#">{{ 'trading.results.view_image'|trans }}</a><br/>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}