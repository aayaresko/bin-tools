{% extends 'base.html.twig' %}

{% block title %}
    {{ "trading.profitability.label"|trans }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>
                {{ "trading.profitability.label"|trans }}
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% form_theme form 'form/bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% if totalEarnings %}
                <p class="text-info">
                    {{ "trading.profitability.total_earnings"|trans({'{{deposit}}': dto.depositAmount, '{{period}}': dto.numberOfDays, '{{numberOfBets}}': dto.numberOfBetsPerDay, '{{totalEarnings}}': totalEarnings}) }}
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}