{% extends 'base.html.twig' %}

{% block title %}
    {{ 'tags.title'|trans }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>
                {{ 'tags.title'|trans }}
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% if pagination is empty %}
                <p class="text-center">
                    {{ 'no_data'|trans }}
                </p>
            {% else %}
                <div class="form-group">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>{{ 'tag.value'|trans }}</th>
                                <th>{{ 'trading.tag.results.title'|trans({'{{tag}}': ''}) }}</th>
                                <th>{{ 'trading.profitability.tag.title'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in pagination %}
                            <tr>
                                <td>{{ item.value }}</td>
                                <td>
                                    <a href="{{ path('results_search_by_tag', {'value': item.value}) }}" title="{{ item.value }}">
                                        {{ item.value }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('trading_profitability_by_tag', {'value': item.value}) }}" title="{{ item.value }}">
                                        {{ item.value }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}